<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zte.video.dao.UserDao">
    <resultMap id="ruser" type="user">
        <id property="id" column="uid"/>
        <result property="pwd" column="upwd"/>
        <result property="name" column="uname"/>
        <result property="registDate" column="uregistDate"/>
        <association property="power" column="power" select="selectPowerByID"/>
    </resultMap>
    <select id="selectByName" resultMap="ruser">
        SELECT
        u.id uid,
        u.pwd upwd,
        u.name uname,
        u.registDate uregistDate,
        (
        SELECT
        p.power
        FROM
        t_power p
        WHERE
        p.id=u.powerID
        )AS TYPE
        FROM t_user u
        WHERE u.name=#{name}


    </select>




    <insert id="insertUser" parameterType="user">
        INSERT INTO
        t_user
        (pwd,name,registDate,powerID)
        VALUES
        (#{pwd},#{name},#{registDate},#{powerID})
        WHERE
        id=#{id}
    </insert>

    <select id="selectByID" parameterType="user">
        SELECT
        *
        FROM
        t_user
        WHERE
        id=#{id}
    </select>




    <update id="updateUser" parameterType="user">
        UPDATE
        t_user
        SET
        name=#{name}
        pwd=#{pwd}
        WHERE
        id=#{id}
    </update>
</mapper>









